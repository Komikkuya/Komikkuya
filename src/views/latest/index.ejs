<div class="relative min-h-screen bg-primary-950 overflow-hidden">
    <!-- Background Ambient Glows -->
    <div
        class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-[800px] h-[800px] bg-green-600/5 blur-[120px] rounded-full pointer-events-none animate-drift">
    </div>
    <div
        class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-purple-900/10 blur-[100px] rounded-full pointer-events-none animate-swell">
    </div>

    <!-- Premium WhatsApp Banner (Cinematic Style) -->
    <section class="relative w-full h-40 md:h-56 overflow-hidden group/banner border-b border-white/5">
        <div
            class="absolute inset-0 bg-gradient-to-r from-green-600/20 via-primary-950 to-purple-600/20 mix-blend-overlay">
        </div>
        <div
            class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/dark-matter.png')] opacity-20">
        </div>

        <div class="max-w-[1800px] mx-auto px-6 md:px-12 h-full flex items-center justify-between relative z-10 pt-8">
            <div class="space-y-3 animate-fade-in">
                <div class="flex items-center gap-3 text-green-500 font-black tracking-[0.4em] uppercase text-[10px]">
                    <span class="w-8 h-[2px] bg-green-500"></span>
                    STAY CONNECTED
                </div>
                <h2 class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter text-white leading-none">
                    Join Our <span class="text-transparent stroke-text-green">Community</span>
                </h2>
                <p class="text-white/40 text-xs md:text-sm font-bold uppercase tracking-widest hidden sm:block">
                    Dapatkan notifikasi rilis terbaru langsung di genggamanmu, bos!
                </p>
            </div>

            <a href="https://whatsapp.com/channel/0029Vb7586h2UPBFAPxb5S1P"
                class="group relative px-10 py-5 bg-green-600 hover:bg-green-700 text-white text-[10px] font-black uppercase tracking-[0.3em] rounded-sm transition-all shadow-[0_20px_40px_rgba(22,163,74,0.3)] hover:-translate-y-1 italic flex items-center gap-4">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z" />
                </svg>
                Join WA Channel
            </a>
        </div>
    </section>

    <div class="max-w-[1800px] mx-auto px-6 md:px-12 relative z-10 pt-20 pb-32">
        <!-- Cinematic Header -->
        <header class="relative mb-20 animate-fade-in" style="animation-delay: 100ms">
            <div class="flex flex-col md:flex-row md:items-end justify-between gap-8">
                <div class="space-y-4">
                    <div class="flex items-center gap-3 text-purple-500 font-black tracking-[0.3em] uppercase text-xs">
                        <span class="w-12 h-[2px] bg-purple-500"></span>
                        FRESH RELEASES
                    </div>
                    <h1
                        class="text-6xl md:text-8xl font-black text-white italic tracking-tighter uppercase leading-none">
                        Latest <br><span class="text-transparent stroke-text">
                            <%= currentCategory %>
                        </span>
                    </h1>
                </div>

                <!-- Category Rail (Glassmorphism) -->
                <nav class="flex gap-3 overflow-x-auto no-scrollbar pb-2">
                    <% categories.forEach(category=> { %>
                        <a href="/latest?category=<%= category %>"
                            class="flex-shrink-0 px-8 py-4 bg-white/5 backdrop-blur-md border border-white/5 rounded-sm text-[10px] font-black uppercase tracking-[0.2em] transition-all hover:border-purple-500/50 hover:bg-white/10 italic <%= currentCategory === category ? 'bg-white !text-black border-white' : 'text-white/40' %>">
                            <%= category %>
                        </a>
                        <% }); %>
                </nav>
            </div>
        </header>

        <!-- Latest Grid (Premium Layout) -->
        <main class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-x-6 gap-y-16">
            <% mangaList.forEach((manga, index)=> { %>
                <div class="group relative flex flex-col gap-4 animate-fade-in"
                    style="animation-delay: <%= 300 + (index * 40) %>ms">
                    <a href="<%= manga.url.startsWith('/') ? manga.url : '/manga/' + (manga.url.split('/manga/')[1]?.replace('/', '') || '') %>"
                        class="block">
                        <div
                            class="relative aspect-[2/3] overflow-hidden rounded-sm border border-white/5 shadow-2xl transition-all duration-700 group-hover:scale-102 group-hover:border-purple-500/50 bg-primary-800">
                            <img src="<%= wsrvUrl(manga.imageUrl) %>" alt="<%= manga.title %>"
                                class="w-full h-full object-cover grayscale-[0.2] group-hover:grayscale-0 transition-all duration-1000 scale-110 group-hover:scale-100"
                                loading="lazy" onerror="this.src='/images/fallback.png'">

                            <div
                                class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-80 group-hover:opacity-40 transition-opacity duration-700">
                            </div>

                            <!-- Meta Badges -->
                            <div
                                class="absolute top-3 left-3 flex flex-col gap-1.5 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500">
                                <% if (manga.source==='international' ) { %>
                                    <span
                                        class="bg-blue-600 text-white text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase tracking-tighter shadow-lg">
                                        EN
                                    </span>
                                    <% } else if (manga.updateStatus) { %>
                                        <span
                                            class="bg-purple-600 text-white text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase tracking-tighter shadow-lg">
                                            <%= manga.updateStatus %>
                                        </span>
                                        <% } %>
                                            <% if (manga.stats?.views && manga.stats.views !=='-' ) { %>
                                                <span
                                                    class="bg-black/80 backdrop-blur-md border border-white/5 text-white/60 text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase tracking-widest italic group-hover:text-white transition-colors">
                                                    <%= manga.stats.views %> Views
                                                </span>
                                                <% } %>
                            </div>

                            <!-- "NEW" Animated Indicator -->
                            <% const timeAgo=manga.stats?.timeAgo || '' ; %>
                                <% if (timeAgo.includes('menit') || timeAgo.includes('jam') || timeAgo.includes('mnt'))
                                    { %>
                                    <div
                                        class="absolute top-3 right-3 flex items-center gap-2 bg-green-500 text-white text-[8px] font-black px-2 py-0.5 rounded-px uppercase tracking-widest italic shadow-lg animate-pulse">
                                        <span class="w-1.5 h-1.5 bg-white rounded-full"></span>
                                        NEW
                                    </div>
                                    <% } %>

                                        <!-- Hover Action Reveal -->
                                        <div
                                            class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                                            <div
                                                class="w-12 h-12 bg-white/10 backdrop-blur-2xl rounded-full flex items-center justify-center border border-white/20 transform scale-50 group-hover:scale-100 transition-transform duration-500">
                                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                                </svg>
                                            </div>
                                        </div>
                        </div>

                        <div class="mt-6 space-y-1.5">
                            <div class="flex items-center gap-2">
                                <span
                                    class="text-purple-500 text-[9px] font-black uppercase tracking-[0.3em] leading-none italic">
                                    Released <%= manga.stats?.timeAgo || 'Baru' %> ago
                                </span>
                                <div class="h-[1px] flex-grow bg-white/5"></div>
                            </div>
                            <h3
                                class="text-white font-black uppercase text-sm italic tracking-tight truncate group-hover:text-purple-400 transition-colors leading-tight">
                                <%= manga.title %>
                            </h3>
                            <p class="text-white/30 text-[10px] font-bold truncate tracking-widest uppercase">
                                <%= manga.latestChapter?.title || 'No Chapter Data' %>
                            </p>
                        </div>
                    </a>
                </div>
                <% }); %>
        </main>

        <!-- Cinematic Pagination -->
        <footer class="mt-32 flex flex-col items-center gap-12 animate-fade-in">
            <div class="relative flex items-center gap-16">
                <a href="/latest?category=<%= pagination.category %>&page=<%= pagination.currentPage > 1 ? pagination.currentPage - 1 : 1 %>"
                    class="group flex items-center gap-6 text-xs font-black text-white/20 hover:text-white transition-all uppercase tracking-[0.4em] italic <%= pagination.currentPage <= 1 ? 'opacity-0 pointer-events-none' : '' %>">
                    <svg class="w-8 h-8 transform group-hover:-translate-x-3 transition-transform" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    PREV
                </a>

                <div class="flex flex-col items-center">
                    <span class="text-[8px] font-black text-purple-600 uppercase tracking-[0.8em] mb-4">Current
                        Page</span>
                    <div class="relative">
                        <span
                            class="text-8xl font-black text-white italic leading-none tracking-tighter opacity-10 blur-sm absolute top-0 left-1/2 -translate-x-1/2 select-none">
                            <%= pagination.currentPage %>
                        </span>
                        <span class="text-8xl font-black text-white italic leading-none tracking-tighter relative">
                            <%= pagination.currentPage %>
                        </span>
                    </div>
                </div>

                <a href="/latest?category=<%= pagination.category %>&page=<%= pagination.currentPage + 1 %>"
                    class="group flex items-center gap-6 text-xs font-black text-white/20 hover:text-white transition-all uppercase tracking-[0.4em] italic">
                    NEXT
                    <svg class="w-8 h-8 transform group-hover:translate-x-3 transition-transform" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>

            <div class="h-[1px] w-32 bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
        </footer>
    </div>
</div>

<style>
    @keyframes drift {

        0%,
        100% {
            transform: translate(50%, -50%) scale(1);
        }

        50% {
            transform: translate(45%, -45%) scale(1.1);
        }
    }

    @keyframes swell {

        0%,
        100% {
            transform: translate(-50%, 0) scale(1);
            opacity: 0.4;
        }

        50% {
            transform: translate(-45%, 5%) scale(1.15);
            opacity: 0.6;
        }
    }

    .animate-drift {
        animation: drift 20s ease-in-out infinite;
    }

    .animate-swell {
        animation: swell 25s ease-in-out infinite;
    }

    .stroke-text {
        -webkit-text-stroke: 1px rgba(255, 255, 255, 0.1);
        color: transparent;
    }


    .stroke-text-green {
        -webkit-text-stroke: 1px rgba(34, 197, 94, 0.2);
    }

    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .scale-102 {
        transform: scale(1.02);
    }
</style>

