<div class="relative min-h-screen bg-primary-950 overflow-hidden">
    <!-- Background Ambient Glows -->
    <div
        class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-[800px] h-[800px] bg-purple-600/10 blur-[120px] rounded-full pointer-events-none animate-drift">
    </div>
    <div
        class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-purple-900/10 blur-[100px] rounded-full pointer-events-none animate-swell">
    </div>

    <div class="max-w-[1800px] mx-auto px-6 md:px-12 relative z-10 pt-32 pb-32">
        <!-- High-Impact Cinematic Header -->
        <header class="relative mb-20 animate-fade-in">
            <div class="flex flex-col md:flex-row md:items-end justify-between gap-8">
                <div class="space-y-4">
                    <div class="flex items-center gap-3 text-purple-500 font-black tracking-[0.3em] uppercase text-xs">
                        <span class="w-12 h-[2px] bg-purple-500"></span>
                        EXPLORE BY GENRE
                    </div>
                    <h1
                        class="text-6xl md:text-8xl font-black text-white italic tracking-tighter uppercase leading-none">
                        <%= selectedGenre ? selectedGenre : 'All' %> <br><span class="text-transparent stroke-text">
                                <%= selectedCategory.charAt(0).toUpperCase() + selectedCategory.slice(1) %>
                            </span>
                    </h1>
                    <p class="text-white/40 max-w-xl text-lg font-medium leading-relaxed">
                        Temukan koleksi <%= selectedCategory %> terbaik dalam genre <%= selectedGenre
                                || 'semua kategori' %> bos. Gak bakal bosen deh!
                    </p>
                </div>

                <!-- Category Selector (Glassmorphism) -->
                <div
                    class="flex items-center gap-2 bg-white/5 backdrop-blur-xl border border-white/5 p-1 rounded-sm shadow-2xl">
                    <% ['manga', 'manhwa' , 'manhua' ].forEach(cat=> { %>
                        <a href="/genre?category=<%= cat %><%= selectedGenre ? `&genre=${selectedGenre}` : '' %>"
                            class="px-8 py-3 text-[10px] font-black uppercase tracking-widest transition-all rounded-sm italic <%= selectedCategory === cat ? 'bg-purple-600 text-white shadow-[0_10px_20px_rgba(147,51,234,0.3)]' : 'text-white/30 hover:text-white hover:bg-white/5' %>">
                            <%= cat %>
                        </a>
                        <% }); %>
                </div>
            </div>
        </header>

        <div class="flex flex-col lg:flex-row gap-12">
            <!-- Glassmorphism Filter Sidebar (Floating Rail) -->
            <aside class="w-full lg:w-[350px] shrink-0">
                <div class="bg-white/5 backdrop-blur-3xl border border-white/5 p-8 rounded-sm sticky top-32 animate-fade-in"
                    style="animation-delay: 100ms">
                    <div class="flex items-center justify-between mb-8">
                        <h2 class="text-xl font-black text-white uppercase italic tracking-tighter">Filter Genres</h2>
                        <button id="mobileGenreToggle"
                            class="lg:hidden text-white/30 hover:text-white transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                    </div>

                    <div id="mobileGenreList"
                        class="hidden lg:block space-y-1 max-h-[60vh] overflow-y-auto pr-4 custom-scrollbar no-scrollbar">
                        <a href="/genre?category=<%= selectedCategory %>"
                            class="group block px-4 py-3 rounded-sm transition-all <%= !selectedGenre ? 'bg-purple-600 text-white italic shadow-lg' : 'text-white/40 hover:text-white hover:bg-white/5' %>">
                            <span class="text-[10px] font-black uppercase tracking-widest">All Genres</span>
                        </a>
                        <% genres.forEach(genre=> { %>
                            <a href="/genre?genre=<%= genre %>&category=<%= selectedCategory %>"
                                class="group block px-4 py-3 rounded-sm transition-all <%= selectedGenre === genre ? 'bg-purple-600 text-white italic shadow-lg font-black' : 'text-white/40 hover:text-white hover:bg-white/5' %>">
                                <span class="text-[10px] font-black uppercase tracking-widest">
                                    <%= genre %>
                                </span>
                            </a>
                            <% }); %>
                    </div>
                </div>
            </aside>

            <!-- Immersive Manga Grid -->
            <main class="flex-1 min-w-0">
                <% if (items.length> 0) { %>
                    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-x-6 gap-y-16">
                        <% items.forEach((item, index)=> { %>
                            <div class="group relative flex flex-col gap-4 animate-fade-in"
                                style="animation-delay: <%= 300 + (index * 40) %>ms">
                                <a href="/manga/<%= item.url.split('/manga/')[1]?.replace('/', '') %>" class="block">
                                    <div
                                        class="relative aspect-[2/3] overflow-hidden rounded-sm border border-white/5 shadow-2xl transition-all duration-700 group-hover:scale-102 group-hover:border-purple-500/50 bg-primary-800">
                                        <img src="<%= wsrvUrl(item.imageUrl) %>" alt="<%= item.title %>"
                                            class="w-full h-full object-cover grayscale-[0.3] group-hover:grayscale-0 transition-all duration-1000 scale-110 group-hover:scale-100"
                                            loading="lazy" onerror="this.src='/images/fallback.png'">

                                        <div
                                            class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-80 group-hover:opacity-40 transition-opacity duration-700">
                                        </div>

                                        <!-- Meta Badges -->
                                        <div
                                            class="absolute top-3 left-3 flex flex-col gap-1.5 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500">
                                            <span
                                                class="bg-purple-600/90 text-white text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase tracking-tighter shadow-lg">Premium</span>
                                            <span
                                                class="bg-black/80 backdrop-blur-md border border-white/5 text-white/60 text-[8px] font-black px-1.5 py-0.5 rounded-px uppercase tracking-widest italic group-hover:text-white transition-colors">
                                                <%= item.stats.views %> Views
                                            </span>
                                        </div>

                                        <!-- Action Hint -->
                                        <div
                                            class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                                            <div
                                                class="w-12 h-12 bg-white/10 backdrop-blur-2xl rounded-full flex items-center justify-center border border-white/20 transform scale-50 group-hover:scale-100 transition-transform duration-500">
                                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                                </svg>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-6 space-y-1.5 relative z-20">
                                        <div class="flex items-center gap-2">
                                            <span
                                                class="text-purple-500 text-[9px] font-black uppercase tracking-[0.3em] leading-none italic">
                                                <%= item.type || selectedCategory %>
                                            </span>
                                            <div class="h-[1px] flex-grow bg-white/5"></div>
                                        </div>
                                        <h3
                                            class="text-white font-black uppercase text-sm italic tracking-tight truncate group-hover:text-purple-400 transition-colors leading-tight">
                                            <%= item.title %>
                                        </h3>
                                        <p
                                            class="text-white/30 text-[10px] font-bold truncate tracking-widest uppercase">
                                            <%= item.latestChapter?.title || 'No Chapter Data' %>
                                        </p>
                                    </div>
                                </a>
                            </div>
                            <% }); %>
                    </div>

                    <!-- Cinematic Pagination -->
                    <footer class="mt-32 flex flex-col items-center gap-12 animate-fade-in">
                        <div class="relative flex items-center gap-16">
                            <a href="/genre?genre=<%= selectedGenre %>&category=<%= selectedCategory %>&page=<%= pagination.currentPage > 1 ? pagination.currentPage - 1 : 1 %>"
                                class="group flex items-center gap-6 text-xs font-black text-white/20 hover:text-white transition-all uppercase tracking-[0.4em] italic <%= pagination.currentPage <= 1 ? 'opacity-0 pointer-events-none' : '' %>">
                                <svg class="w-8 h-8 transform group-hover:-translate-x-3 transition-transform"
                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 19l-7-7 7-7" />
                                </svg>
                                PREV
                            </a>

                            <div class="flex flex-col items-center">
                                <span
                                    class="text-[8px] font-black text-purple-600 uppercase tracking-[0.8em] mb-4">Location</span>
                                <div class="relative">
                                    <span
                                        class="text-8xl font-black text-white italic leading-none tracking-tighter opacity-10 blur-sm absolute top-0 left-1/2 -translate-x-1/2 select-none">
                                        <%= pagination.currentPage %>
                                    </span>
                                    <span
                                        class="text-8xl font-black text-white italic leading-none tracking-tighter relative">
                                        <%= pagination.currentPage %>
                                    </span>
                                </div>
                            </div>

                            <a href="/genre?genre=<%= selectedGenre %>&category=<%= selectedCategory %>&page=<%= pagination.currentPage + 1 %>"
                                class="group flex items-center gap-6 text-xs font-black text-white/20 hover:text-white transition-all uppercase tracking-[0.4em] italic">
                                NEXT
                                <svg class="w-8 h-8 transform group-hover:translate-x-3 transition-transform"
                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>

                        <div class="h-[1px] w-32 bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
                    </footer>
                    <% } else { %>
                        <!-- Cinematic Empty State -->
                        <div
                            class="bg-white/5 backdrop-blur-3xl border border-white/5 p-20 rounded-sm text-center animate-fade-in">
                            <div class="space-y-6">
                                <div class="flex justify-center">
                                    <div class="relative">
                                        <div class="absolute inset-0 bg-purple-600/30 blur-3xl rounded-full"></div>
                                        <svg class="w-24 h-24 text-white/10 relative" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1"
                                                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="space-y-2">
                                    <h3 class="text-4xl font-black text-white uppercase italic tracking-tighter">No
                                        Manga Found</h3>
                                    <p class="text-white/30 text-xs font-bold uppercase tracking-widest">Nothing to see
                                        here yet bos, coba genre lain.</p>
                                </div>
                                <a href="/genre?category=<%= selectedCategory %>"
                                    class="inline-block px-12 py-5 bg-white text-black font-black uppercase text-[10px] tracking-[0.3em] italic hover:bg-purple-600 hover:text-white transition-all rounded-sm shadow-2xl">
                                    Browse All Genres
                                </a>
                            </div>
                        </div>
                        <% } %>
            </main>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Mobile genre toggle logic
        const toggleBtn = document.getElementById('mobileGenreToggle');
        const genreList = document.getElementById('mobileGenreList');

        if (toggleBtn && genreList) {
            toggleBtn.addEventListener('click', function () {
                genreList.classList.toggle('hidden');
                const svg = this.querySelector('svg');
                if (svg) svg.style.transform = genreList.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
            });
        }
    });
</script>

<style>
    @keyframes drift {

        0%,
        100% {
            transform: translate(50%, -50%) scale(1);
        }

        50% {
            transform: translate(45%, -45%) scale(1.1);
        }
    }

    @keyframes swell {

        0%,
        100% {
            transform: translate(-50%, 0) scale(1);
            opacity: 0.4;
        }

        50% {
            transform: translate(-45%, 5%) scale(1.15);
            opacity: 0.6;
        }
    }

    .animate-drift {
        animation: drift 20s ease-in-out infinite;
    }

    .animate-swell {
        animation: swell 25s ease-in-out infinite;
    }

    .stroke-text {
        -webkit-text-stroke: 1px rgba(255, 255, 255, 0.1);
        color: transparent;
    }

    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }


    .scale-102 {
        transform: scale(1.02);
    }

    .custom-scrollbar::-webkit-scrollbar {
        width: 3px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #9333ea;
        border-radius: 10px;
    }
</style>

<%- include('../partials/lazyload') %>