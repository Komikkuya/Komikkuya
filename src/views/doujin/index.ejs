<div class="min-h-screen bg-gradient-to-b from-primary-900 to-primary-800">
    <div class="container mx-auto px-4 py-8">

        <!-- Header -->
        <div class="mb-10">
            <h1 class="text-4xl font-bold text-white tracking-tight mb-2">
                Doujin Update (Page <%= pagination.page %>)
            </h1>
            <p class="text-gray-400 mb-6">
                Temukan update doujin terbaru setiap hari.
            </p>

            <!-- WhatsApp Button -->
            <a href="https://whatsapp.com/channel/0029Vb7586h2UPBFAPxb5S1P" 
                class="inline-flex items-center justify-center gap-3 px-4 py-2 rounded-lg bg-gradient-to-r from-green-600 to-green-500 text-white font-medium transition-all hover:scale-105 hover:shadow-green-500/20 border border-green-500/20">
                
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-whatsapp" viewBox="0 0 16 16">
                    <path d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326z"/>
                </svg>

                Join Channel WA
            </a>
        </div>

        <!-- Doujin Grid -->
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
            <% items.forEach(doujin => { %>
                <div class="bg-primary-800/80 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg border border-purple-500/10 hover:border-purple-500/40 transition-all duration-300 group">
                    
                    <a href="<%= doujin.link %>" class="block relative">
                        <div class="relative overflow-hidden">
                            <img src="<%= doujin.thumbnail %>" 
                                 class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
                                 alt="<%= doujin.title %>"
                                 >

                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
                        </div>

                        <!-- Content -->
                        <div class="p-4">
                            <h3 class="text-white font-semibold text-sm line-clamp-2 group-hover:text-purple-400 transition-colors">
                                <%= doujin.title %>
                            </h3>

                            <p class="text-gray-400 text-xs mt-2 bg-primary-700/50 px-2 py-1 rounded-full w-fit">
                                <%= doujin.chapter %>
                            </p>

                            <div class="flex items-center justify-between mt-3 text-xs text-gray-300">
                                <span class="bg-primary-700/40 px-2 py-1 rounded">
                                    <%= doujin.type %>
                                </span>
                                <span class="text-yellow-400 font-semibold">
                                    ‚≠ê <%= doujin.rating %>
                                </span>
                            </div>
                        </div>
                    </a>

                </div>
            <% }) %>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center mt-12">
            <div class="flex items-center space-x-2 bg-primary-800/50 backdrop-blur-sm px-4 py-2 rounded-xl border border-purple-500/20">

                <a href="/doujin?page=<%= pagination.prev %>" 
                   class="p-2 text-gray-400 hover:text-white hover:bg-primary-700/50 rounded-lg transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>

                <span class="px-4 py-1 text-sm text-gray-300 bg-primary-700/50 rounded-lg">
                    Page <%= pagination.page %> of <%= pagination.totalPages %>
                </span>

                <a href="/doujin?page=<%= pagination.next %>"
                   class="p-2 text-gray-400 hover:text-white hover:bg-primary-700/50 rounded-lg transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>

            </div>
        </div>

    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const cards = document.querySelectorAll('.grid > div');
        
        cards.forEach((card, idx) => {
            card.style.opacity = 0;
            card.style.animation = "fadeIn 0.45s ease-out forwards";
            card.style.animationDelay = (idx * 0.06) + "s";
        });
    });
</script>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    ::-webkit-scrollbar { width: 8px; }
    ::-webkit-scrollbar-track { background: rgba(45, 36, 57, 0.5); }
    ::-webkit-scrollbar-thumb { background: rgba(147, 51, 234, 0.5); border-radius: 4px; }
    ::-webkit-scrollbar-thumb:hover { background: rgba(147, 51, 234, 0.7); }
</style>
